{
    "name": "Boring RPG Auto-play",
    "version": "7.2",
	"update_url": "http://www.uc.edu/~bakergo/boringrpg/clickbot/updates.xml",
    "background_page": "boringrpg.background.html",
    "permissions":["notifications"],
    "content_scripts": [
        {
            "matches": ["http://www.boringrpg.com/game"],
            "js": ["boringrpg.lib.js","boringrpg.game.js"]
        },
        
        {
            "matches": ["http://www.boringrpg.com/guild"],
            "js": ["boringrpg.lib.js","boringrpg.guild.js"]
        },
	        
        {
            "matches": ["http://www.boringrpg.com/guild/treasury"],
            "js": ["boringrpg.lib.js","boringrpg.guild.treasury.js"]
        },
        
        {
            "matches": ["http://www.boringrpg.com/party-box"],
            "js": ["boringrpg.lib.js","boringrpg.party-box.js"]
        },
        
        {
			"matches": ["http://www.boringrpg.com/chat"],
			"js": ["boringrpg.lib.js","boringrpg.chat.js"]
		}
    ]
}
